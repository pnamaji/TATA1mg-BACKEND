{
    "base_url": "https://tata1mg-backend.onrender.com",
    "endpoints": [
      {
        "name": "User Signup",
        "url": "/account/api/signup/",
        "method": "POST",
        "description": "Send OTP to user email and SMS.",
        "request_body": {
          "email": "string",
          "mobile_number": "string"
        },
        "response": {
          "status": "200",
          "message": "OTP sent. Please enter OTP to verify your account."
        }
      },
      {
        "name": "User Signup Resend OTP",
        "url": "/account/api/signup/resend-otp/",
        "method": "POST",
        "description": "API to resend OTP.",
        "request_body": {},
        "response": {
          "refresh_token": "string",
          "access_token": "string"
        }
      },
      {
        "name": "User Signup Verify OTP",
        "url": "/account/api/signup/verify-otp/",
        "method": "POST",
        "description": "API to verify OTP and create a new user.",
        "request_body": {
          "otp": "string",
          "otp_sms": "string"
        },
        "response": {
          "refresh_token": "string",
          "access_token": "string"
        }
      },
      {
        "name": "User Login with Email",
        "url": "/account/api/login/email/",
        "method": "POST",
        "description": "API to generate OTP for user authentication.",
        "request_body": {
          "email": "string"
        },
        "response": {
          "message": "OTP sent successfully."
        }
      },
      {
        "name": "User Login with Email Verify OTP",
        "url": "/account/api/login/email/verify-otp/",
        "method": "POST",
        "description": "Login API to verify OTP and authenticate user, generating JWT tokens.",
        "request_body": {
          "otp": "string"
        },
        "response": {
          "access_token": "string",
          "refresh_token": "string"
        }
      },
      {
        "name": "User Login with Mobile Number",
        "url": "/account/api/login/mobile-number/",
        "method": "POST",
        "description": "API to generate OTP for user authentication.",
        "request_body": {
          "mobile_number": "string"
        },
        "response": {
          "message": "OTP sent successfully."
        }
      },
      {
        "name": "User Login with Mobile Number Verify OTP",
        "url": "/account/api/login/mobile-number/verify-otp/",
        "method": "POST",
        "description": "Login API to verify OTP and authenticate user, generating JWT tokens.",
        "request_body": {
          "otp": "string"
        },
        "response": {
          "access_token": "string",
          "refresh_token": "string"
        }
      },
      {
        "name": "LogOut the User",
        "url": "/account/api/logout/",
        "method": "POST",
        "description": "Log out the user and blacklist the token.",
        "headers": {
          "Authorization": "Bearer <access_token>"
        },
        "response": {
          "message": "Successfully logged out."
        }
      }
    ]
  }
  